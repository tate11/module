<odoo>
    <record id="kanban_view_opportunity_ssl" model="ir.ui.view">
        <field name="name">kanban_view_opportunity_ssl</field>
        <field name="model">crm.lead</field>
        <field name="type">kanban</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <field name="display_name"/>
            </field>
        </field>
    </record>

    <record id="lead_tree_view_ssl" model="ir.ui.view">
        <field name="name">lead_tree_view_ssl</field>
        <field name="model">crm.lead</field>
        <field name="type">tree</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_leads"/>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <field name="display_name" string="Lead"/>
            </field>
        </field>
    </record>

    <record id="oppor_tree_view_ssl" model="ir.ui.view">
        <field name="name">oppor_tree_view_ssl</field>
        <field name="model">crm.lead</field>
        <field name="type">tree</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <field name="display_name" string="Opportunity"/>
            </field>
        </field>
    </record>
</odoo>
