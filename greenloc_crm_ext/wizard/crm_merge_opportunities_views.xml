<?xml version="1.0"?>
<odoo>
        <!-- Merge Opportunities  -->
        <record id="greenloc_merge_opportunity_form" model="ir.ui.view">
            <field name="name">greenloc.crm.merge.opportunity.form</field>
            <field name="model">crm.merge.opportunity</field>
            <field name="inherit_id" ref="crm.merge_opportunity_form"/>
            <field name="arch" type="xml">
                <!-- Merge Opportunities  -->
                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="head_opportunity_id"/>
                </xpath>
            </field>
        </record>

</odoo>
