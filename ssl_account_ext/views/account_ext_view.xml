<odoo>

    <record id="account_ext" model="ir.ui.view">
        <field name="name">account_ext</field>
        <field name="model">account.invoice</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="fal_port_departure" />
                <field name="fal_port_destination"/>
            </field>
            <xpath expr="//button[@name='invoice_print'][1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='invoice_print'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

<!--     <report id="account.report_invoice" string="Invoices" model="account.invoice" report_type="qweb-pdf" file="account.report_invoice" name="account.report_invoice" menu="False"/> -->

</odoo>
