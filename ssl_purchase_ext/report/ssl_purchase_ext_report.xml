<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="ssl_purchase_ext_report" inherit_id="purchase.report_purchaseorder_document">
    <xpath expr="//table[@class='table table-condensed']/thead/tr/th[1]" position="before">
        <th class="text-center"><strong>Old Ref.</strong></th>
        <th class="text-center"><strong>Easy Ref.</strong></th>
        <th class="text-center"><strong>Client Ref.</strong></th>
    </xpath>
    <xpath expr="//table[@class='table table-condensed']/tbody/tr/td[1]" position="before">
        <td class="text-center">
            <span t-field="line.product_id.description_sale"></span>
            <!-- Code for Old Ref. / Website Reference -->
        </td>
        <td class="text-center">
            <span t-field="line.product_id.default_code"></span>
            <!-- Code for Easy Ref. / Internal Reference -->
        </td>
        <td class="text-center">
            <span t-field="line.product_id.fal_client_ref"></span>
            <!-- Code for Client Ref. / Customer Reference -->
        </td>
    </xpath>

    <xpath expr="//table[@class='table table-condensed']/thead/tr/th[4]" position="after">
        <th class="text-center"><strong>Pack / Barcode</strong></th>
    </xpath>
    <xpath expr="//table[@class='table table-condensed']/tbody/tr/td[4]" position="after">
        <td class="text-center">
        	<t t-if="line.product_id.attribute_value_ids.filtered(lambda r: r.attribute_id.name.lower() == 'packing')">
        		<span t-field="line.product_id.attribute_value_ids.filtered(lambda r: r.attribute_id.name.lower() == 'packing').attribute_id.value_ids.filtered(lambda r: line.product_id.id in r.product_ids.ids).name"></span>
        	</t><br/>
            <span>Barcode:</span><br/>
            <span t-field="line.product_id.barcode"></span>
        </td>
    </xpath>
</template>
</odoo>